<%= form_for [current_user, @quiz] do |f| %>

	<%= render "layouts/error_messages", :object => @quiz %>
	
	<div class="field">	
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :num_answers, "How many answers should be created per student?" %><br />
		<%= f.select :num_answers, (Quiz::MIN_ANSWERS..Quiz::MAX_ANSWERS).to_a %>
	</div>
	<div class="field" >
		<%= f.label :course_id, "Select the course" %><br />
		<%= f.collection_select :course_id, current_user.courses_created_by_himself, :id, :name %>
	</div>
	
	<div class="field">	
		<%= f.radio_button :active, false, :checked => true %> 
		<%= label :role, 'Keep quiz inactive' %><br />
	  <%= f.radio_button :active, true %>
	  <%= label :role, 'Activate the Quiz' %>
	</div>	
	
	<%= f.submit %>
	
<% end %>
