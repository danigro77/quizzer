<h2>Sign in</h2>

<%= form_tag sessions_path do %>
	<div class="field">
  	<%= label_tag :email %><br />
   	<%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <%= submit_tag "Log in" %>
<% end %>